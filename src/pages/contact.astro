---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section class="contact-section">
    <h1>Contacto</h1>
    <p>Puedes comunicarte conmigo a través de las siguientes plataformas:</p>
    
    <div class="contact-options">
      <a href="mailto:renzo.vilca@upch.pe" class="contact-option" target="_blank" rel="noopener noreferrer">
        <i class="fas fa-envelope"></i> renzo.vilca@upch.pe
      </a>
      
      <a href="https://www.instagram.com/anttooxc/" class="contact-option" target="_blank" rel="noopener noreferrer">
        <i class="fab fa-instagram"></i> Instagram
      </a>
      
      <a href="https://www.linkedin.com/in/renzo-antonio-vilca-loayza-bbb133328/" class="contact-option" target="_blank" rel="noopener noreferrer">
        <i class="fab fa-linkedin"></i> LinkedIn
      </a>
      
      <p class="contact-option">
        <i class="fas fa-phone"></i> +51 963758648
      </p>
    </div>

    <!-- Formulario de Contacto (opcional) -->
    <form action="#" method="post" class="contact-form">
      <h2>Envíame un mensaje</h2>
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" required>

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>

      <label for="message">Mensaje:</label>
      <textarea id="message" name="message" rows="4" required></textarea>

      <button type="submit" class="btn">Enviar</button>
    </form>
  </section>
</BaseLayout>
