---
// Recibe props para cada proyecto
const { title, description, features, githubLink, image } = Astro.props;
---

<div class="project">
  <h2>{title}</h2>
  <p>{description}</p>
  <p><strong>Caracter√≠sticas:</strong></p>
  <ul>
    {features.map(feature => (
      <li>{feature}</li>
    ))}
  </ul>
  <a href={githubLink} target="_blank">Ver en GitHub</a>
  <img src={image} alt={`Imagen de ${title}`} class="project-image">
</div>
